extends ../layouts/navbar

block content
    h1.jumbotron.text-center Sources Upload
    .container
        .row
            .col.col-4-lg
            .col.col-4-lg
                form.jumbotron(method='POST', enctype='multipart/form-data')
                    input(type='hidden', value=csrfToken, name='_csrf')
                    .form-group
                        if errors.title
                            .alert.alert-danger.text-center #{errors.title}
                        label(for='title') Title
                        input#title.form-control(type='text', name='title', placeholder='Enter title', value=source.title || '')
                    .form-group
                        if errors.description
                                .alert.alert-danger.text-center #{errors.description}
                        label(for='description') Description
                        input#description.form-control(type='text', name='description', placeholder='Enter description', value=source.description || '')
                    .form-group
                        if errors.file_upload
                                .alert.alert-danger.text-center #{errors.file_upload}
                        label(for='file') Source
                        input#file.form-control(type='file', name='file_upload', accept='application/pdf')
                    .form-group.text-center
                        button.btn.btn-primary.mb-2(type='submit') Upload
            .col.col-4-lg